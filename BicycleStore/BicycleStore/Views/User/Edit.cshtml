@model BicycleStore.Models.User

<h1>Editing @Model.UserName</h1>
<div asp-validation-summary="ModelOnly"></div>
<a asp-action="Edit" asp-controller="Roles" asp-route-userId="@Model.Id" class="btn btn-primary">Edit roles</a>
<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.Id" />
    <div class="form-group row align-items-center">
        <div class="col-auto">
            <label for="userName">User name:</label>
        </div>
        <div class="col-auto">
            <input type="text" class="form-control" name="userName" id="userName" value="@Model.UserName" @(Model.UserName == "admin@gmail.com" ? "disabled" : "") />
        </div>
    </div>
    <div class="form-group row align-items-center">
        <div class="col-auto">
            <label for="Year">Year:</label>
        </div>
        <div class="col-auto">
            <input type="text" class="form-control" name="year" id="year" value="@Model.Year" />
        </div>
    </div>
    <div class="form-group row align-items-center">
        <div class="col-auto">
            <label for="pass">New password:</label>
        </div>
        <div class="col-auto">
            <input type="password" class="form-control" name="pass" id="pass" value="" />
        </div>
    </div>
    <input type="submit" value="Save changes" class="btn btn-primary"/>

</form>
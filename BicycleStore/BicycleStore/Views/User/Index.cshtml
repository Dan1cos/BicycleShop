@model System.Collections.Generic.List<BicycleStore.Models.ViewModels.UserInfoViewModel>


<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Is Admin</th>
            <th>Make admin</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var it in Model)
        {

            <tr>
                <td>@it.User.Email</td>
                <td>@it.User.UserName</td>
                <td><input type="checkbox" checked=@(it.IsAdmin) disabled /></td>
                <td>
                    @using (Html.BeginForm("Index", "User"))
                    {
                        <input type="hidden" value="@it.User.Id" name="Id" />
                        <input type="hidden" value="@it.User.Email" name="Email" />
                        <input type="hidden" value="@it.User.UserName" name="UserName" />
                        @if (!it.IsAdmin)
                        {
                            <input type="submit" class="btn btn-primary" value="Make admin" />
                        }
                        else
                        {
                            <input type="submit" class="btn btn-primary" value="Delete admin" />
                        }
                    }
                </td>
            </tr>

        }

    </tbody>
</table>

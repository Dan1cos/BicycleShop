@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h1>Roles</h1>
<table class="table">
    @foreach(var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <input type="submit" class="btn btn-danger" value="Delete" @(role.Name=="superAdmin"?"disabled":"")>
                </form>
            </td>
        </tr>
    }
    
</table>

<a asp-action="Create" class="btn btn-primary">New role</a>
<a asp-controller="User" asp-action="Index" class="btn btn-primary">User list</a>
@model IEnumerable<BicycleStore.Models.Bicycle>

    @if (ViewBag.Thanks != null)
    {
        <div class="display-3 text-success">@ViewBag.Thanks</div>
    }
    <h2>Bicycles</h2>
    <table class="table">
        <thead>
            <tr>
                <td>Title</td>
                <td>Model</td>
                <td>Price</td>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Page != null)
            {
                @if (Model.Count() - ViewBag.Page * 10 < 0)
                {
                    @for (int i = ViewBag.Page * 10 - 10; i < Model.ToList().Count; i++)
                    {
                        var arr = Model.ToArray();
                        <tr>
                            <td>@arr[i].Title</td>
                            <td>@arr[i].Model</td>
                            <td>@arr[i].Price</td>
                            <td>
                                @using (Html.BeginForm("AddToCart", "Cart"))
                                {
                                    <input type ="hidden" value="@arr[i].BicycleId" name="BicycleId" />
                                    <input type ="hidden" value="@Context.Request.Path" name="returnUrl" />
                                    <input type ="submit" class="btn btn-primary" value="+ Add to cart" />
                                }
                            </td>
                            <td><a href="~/Home/Buy/@arr[i].BicycleId" class="btn btn-primary">Buy</a></td>
                        </tr>
                    }
                }
                else
                {
                    @for (int i = ViewBag.Page * 10 - 10; i < 10 * ViewBag.Page; i++)
                    {
                        var arr = Model.ToArray();
                        <tr>
                            <td>@arr[i].Title</td>
                            <td>@arr[i].Model</td>
                            <td>@arr[i].Price</td>
                            <td>
                                @using (Html.BeginForm("AddToCart", "Cart"))
                                {
                                    <input type ="hidden" value="@arr[i].BicycleId" name="BicycleId" />
                                    <input type ="hidden" value="@Context.Request.Path" name="returnUrl" />
                                    <input type ="submit" class="btn btn-primary" value="+ Add to cart" />
                                }
                            </td>
                            <td><a href="~/Home/Buy/@arr[i].BicycleId" class="btn btn-primary">Buy</a></td>
                        </tr>
                    }
                }
            }
            else
            {
                @for (int i = 0; i < 10; i++)
                {
                    var arr = Model.ToArray();
                    <tr>
                        <td>@arr[i].Title</td>
                        <td>@arr[i].Model</td>
                        <td>@arr[i].Price</td>
                        <td>
                            @using (Html.BeginForm("AddToCart", "Cart"))
                            {
                                <input type ="hidden" value="@arr[i].BicycleId" name="BicycleId" />
                                <input type ="hidden" value="@Context.Request.Path" name="returnUrl" />
                                <input type ="submit" class="btn btn-primary" value="+ Add to cart" />
                            }
                        </td>
                        <td><a href="~/Home/Buy/@arr[i].BicycleId" class="btn btn-primary">Buy</a></td>
                    </tr>
                }
            }

        </tbody>
    </table>
    <div class="d-inline-flex flex-row border">
        @for (int i = 1; i <= Math.Ceiling(Convert.ToDecimal(Model.Count()/10)+1); i++)
        {
            <a href="~/Home/Index?id=@i" class="btn border-right">@i</a>

        }
    </div>
    
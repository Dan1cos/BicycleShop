

<div>
    <h2>Order</h2>
    <div class="container">
        <div class="row">
            <div class="col-4">
                <form method="post">
                    <input type="hidden" name="BicycleId" value="@ViewBag.BicycleId" />
                    <div class="form-group">
                        <label>Name:</label>
                        <input type="text" name="Name" class="ml-3 w-75"/>
                    </div>
                    <div class="form-group">
                        <label>Address:</label>
                        <input type="text" name="Address" class="w-75"/>
                    </div>
                    <div class="form-group">
                        <label>Phone:</label>
                        <input type="text" name="Phone" class="w-75" style="margin-left:12px;"/>
                    </div>
                    <input class="btn btn-secondary w-50" type="submit" value="Buy"/>
                </form>
            </div>
            <div class="col-8">
                <h3>Bicycle</h3>
                <table class="table">
                    <tr>
                        <td class="font-weight-bold">Title</td>
                        <td>@ViewBag.Bicycle.Title</td>
                    </tr>
                    <tr>
                        <td class="font-weight-bold">Model</td>
                        <td>@ViewBag.Bicycle.Model</td>
                    </tr>
                    <tr>
                        <td class="font-weight-bold">Wheel diameter</td>
                        <td>@ViewBag.Bicycle.WDiameter</td>
                    </tr>
                    <tr>
                        <td class="font-weight-bold">Frame material</td>
                        <td>@ViewBag.Bicycle.FrameMaterial</td>
                    </tr>
                    <tr>
                        <td class="font-weight-bold">Brake type</td>
                        <td>@ViewBag.Bicycle.BrakeType</td>
                    </tr>
                    <tr>
                        <td class="font-weight-bold">Color</td>
                        <td>@ViewBag.Bicycle.Color</td>
                    </tr>
                </table>
                <div class="font-weight-bold" style="font-size:30px;">Price: @ViewBag.Bicycle.Price $</div>
            </div>
        </div>
    </div>
    
</div>